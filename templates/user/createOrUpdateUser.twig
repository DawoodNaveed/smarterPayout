{% extends 'dashboardMenu.html.twig' %}

{% block title %}User Management | Add New{% endblock %}

{% block content %}

    <div class="col-md-12 ">
        {{ form_start(form) }}
        <div class="row">
            <div class="form-row col-md-6 mb-3">
                <label for="username">Username</label>
                {{ form_widget(form.username) }}{{ form_errors(form.username) }}
            </div>

            <div class="form-row col-md-6 mb-3">
                <label for="username">Email</label>
                {{ form_widget(form.email) }}{{ form_errors(form.email) }}
            </div>

            <div class="form-row col-md-6 mb-3">
                <label for="username">Phone Number</label>
                {{ form_widget(form.phoneNumber) }}{{ form_errors(form.phoneNumber) }}
            </div>

            <div class="form-row col-md-6 mb-3">
                <label for="username">Business Phone</label>
                {{ form_widget(form.businessPhone) }}{{ form_errors(form.businessPhone) }}
            </div>

            <div class="form-row col-md-6 mb-3">
                <label for="username">Job Title</label>
                {{ form_widget(form.jobTitle) }}{{ form_errors(form.jobTitle) }}
            </div>

            <div class="form-row col-md-6 mb-3">
                {{ form_widget(form.password) }}{{ form_errors(form.password) }}
            </div>
        </div>
        {{ form_errors(form) }}
        {{ form_end(form) }}
    </div>
{% endblock content %}
