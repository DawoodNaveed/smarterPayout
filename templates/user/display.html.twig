{% extends 'dashboardMenu.html.twig' %}

{% block title %}User Management | Add New{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            <a class="btn btn-sm btn-primary float-right" href="{{ path('user_list') }}" title="Back to grid"> <i
                        class="fas fa-arrow-left"></i></a>
            <h3 class="text-center">User Details</h3>
        </div>
        <div class="card-body">
            <p><b>Username:</b> {{ user.username }}</p>
            <p><b>Email:</b> {{ user.email }}</p>
            <p><b>Phone Number:</b> {{ user.phoneNumber }}</p>
            <p><b>Business Phone:</b> {{ user.businessPhone }}</p>
            <p><b>Job Title:</b> {{ user.jobTitle }}</p>
        </div>
    </div>
{% endblock content %}