{% extends 'dashboardMenu.html.twig' %}

{% block title %}User Management!{% endblock %}

{% block content %}

    <div class="modal fade" id="deleteModel" tabindex="-1" role="dialog"
         aria-labelledby="deleteModel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title"><i class="fa fa-exclamation-triangle text-warning modal-icon"></i> Are you
                        sure you want to delete?</h6>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                    <a class="btn btn-primary" href="" id="deletebtn"> Yes</a>
            </div>
        </div>
    </div>
    </div>
    <div class="card">
        <div class="card-header">
            <a class="btn btn-sm btn-primary float-right" href="{{ path('add_user') }}"> Create New <span
                        class="fa fa-plus"></span></a>
            <h3 class="text-center">User Management</h3>
        </div>
        <div class="card-body">
            <table id="data_table" class="display table-hover table-striped table-bordered">
                <thead>
                <tr>
                    <th>Username</th>
                    <th>Phone Number</th>
                    <th>Business Phone</th>
                    <th>Email</th>
                    <th>Job title</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>

                {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.phoneNumber }}</td>
                        <td>{{ user.businessPhone }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.jobTitle }}</td>
                        <td>
                            <a class="fas fa-edit text-primary p-1 ml-4" title="Edit User"
                               href="{{ path('edit_user', {'userId' : user.id}) }}"></a>
                            <a class="fas fa-trash text-danger p-1 ml-4 deleteRecord" data-toggle="modal" data-target="#deleteModel"
                               title="Delete User" data-url="{{ path('delete_user', {'userId' : user.id})}}"></a>
                            <a class="fas fa-info text-info p-1 ml-4" title="View Details"
                               href="{{ path('show_user', {'userId' : user.id}) }}"></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}



