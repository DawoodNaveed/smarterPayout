{% extends 'admin/dashboardMenu.html.twig' %}

{% block title %}Leads Interaction - Smarter Payouts{% endblock %}

{% block content %}
<div class="card custom-card">
    <div class="card-header bg-theme m-0">
        <h4>Leads Interaction</h4></div>
    <div class="card-body">
        <table id="data_table" class="table-hover table-striped table-responsive-lg table-responsive-md table-responsive-sm table-responsive-xl">
            <thead>
            <tr>
                <th></th>
                <th>Type</th>
                <th>CRM ID</th>
                <th>First Name</th>
                <th>Contact 1</th>
                <th>Contact 2</th>
                <th>Contact 3</th>
                <th>Voice Tag</th>
                <th>Notes</th>
                <th>Date/Time</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>

            {% for customer in customers %}
                <tr>
                    <td>
                        <div class="checkbox icheck-info">
                            <input class="customer-details" type="radio" data-uri="{{ path('get_customer', {'id' : customer.id})}}" data-customerId="{{ customer.id }}" name="customer" id="{{ customer.id }}"/>
                            <label for="{{ customer.id }}"></label>
                        </div>
                    </td>
                    <td>LCP</td>
                    <td>584512</td>
                    <td>{{ customer.firstName }}</td>
                    <td>
                        <p>{{ customer.phoneNumber1 }}</p>
                        <div class="d-flex justify-content-center">
                            <div class="custom-control-inline">
                                <div class="radio icheck-success">
                                    <input type="radio" id="{{ customer.id }}_phoneNumber1_success" name="{{ customer.id  }}_phoneNumber1"/>
                                    <label for="{{ customer.id }}_phoneNumber1_success"></label>
                                </div>
                                <div class="radio icheck-warning">
                                    <input type="radio" id="{{ customer.id }}_phoneNumber1_warning" name="{{ customer.id  }}_phoneNumber1"/>
                                    <label for="{{ customer.id }}_phoneNumber1_warning"></label>
                                </div>
                                <div class="radio icheck-danger">
                                    <input type="radio" id="{{ customer.id }}_phoneNumber1_danger" name="{{ customer.id  }}_phoneNumber1"/>
                                    <label for="{{ customer.id }}_phoneNumber1_danger"></label>
                                </div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <p>{{ customer.phoneNumber2 }}</p>
                        <div class="d-flex justify-content-center">
                            <div class="custom-control-inline">
                                <div class="radio icheck-success">
                                    <input type="radio" id="{{ customer.id }}_phoneNumber2_success" name="{{ customer.id  }}_phoneNumber2"/>
                                    <label for="{{ customer.id }}_phoneNumber2_success"></label>
                                </div>
                                <div class="radio icheck-warning">
                                    <input type="radio" id="{{ customer.id }}_phoneNumber2_warning" name="{{ customer.id  }}_phoneNumber2"/>
                                    <label for="{{ customer.id }}_phoneNumber2_warning"></label>
                                </div>
                                <div class="radio icheck-danger">
                                    <input type="radio" id="{{ customer.id }}_phoneNumber2_danger" name="{{ customer.id  }}_phoneNumber2"/>
                                    <label for="{{ customer.id }}_phoneNumber2_danger"></label>
                                </div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <p>{{ customer.phoneNumber3 }}</p>
                        <div class="d-flex justify-content-center">
                            <div class="custom-control-inline">
                                <div class="radio icheck-success">
                                    <input type="radio" id="{{ customer.id }}_phoneNumber3_success" name="{{ customer.id  }}_phoneNumber3"/>
                                    <label for="{{ customer.id }}_phoneNumber3_success"></label>
                                </div>
                                <div class="radio icheck-warning">
                                    <input type="radio" id="{{ customer.id }}_phoneNumber3_warning" name="{{ customer.id  }}_phoneNumber3"/>
                                    <label for="{{ customer.id }}_phoneNumber3_warning"></label>
                                </div>
                                <div class="radio icheck-danger">
                                    <input type="radio" id="{{ customer.id }}_phoneNumber3_danger" name="{{ customer.id  }}_phoneNumber3"/>
                                    <label for="{{ customer.id }}_phoneNumber3_danger"></label>
                                </div>
                            </div>
                        </div>
                    </td>
                    <td><a href="{{ path('get_audio', {'customerId' : customer.id}) }}" title="Verify Voice Tags"><i
                                    class="fa fa-file-audio m-1 {% if customer.audioTagCompleted %}bg-outline-theme{% else %}bg-outline-dark{% endif %}"></i></a></td>
                    <td>Client is at work, will call at 5 pm</td>
                    <td>10:15 am
                        <br> 10/15/2021
                    </td>
                    <td>
                        <a href="" title="Details"><i class="fa fa-info m-1 bg-outline-theme"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}