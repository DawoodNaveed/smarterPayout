{% extends 'admin/base.html.twig' %}

{% block title %}Reset Password!{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center login">
        <div class="col-md-8 rounded p-5">
            <div class="row">
                <div class="col-md-6 d-flex justify-content-center align-items-center custom-border-right">
                    <img class="rounded img-fluid" width="250"
                         alt="Logo" src="{{ asset ('resources/images/logo.png') }}">
                </div>
                <div class="col-md-6">
                    <form method="post">
                        <div class="d-flex align-items-center flex-column login-form">
                            <h3 class="pb-5 font-weight-bold">Reset Password</h3>

                            {{ form_start(form) }}
                            {% if form.email is defined %}
                                <div class="form-row col-md-12 pb-4 ">
                                    {{ form_widget(form.email) }}{{ form_errors(form.email) }}
                                </div>

                            {% endif %}
                            {% if form.password is defined %}
                                <div class="form-row col-md-12 mb-3">
                                    {{ form_widget(form.password.first) }}{{ form_errors(form.password) }}
                                </div>
                                <div class="form-row col-md-12 mb-5">
                                    {{ form_widget(form.password.second) }}{{ form_errors(form.password) }}
                                </div>
                            {% endif %}
                            <div class="form-row col-md-12 mt-5 pb-3">
                                <input class="form-control btn btn-outline-success custom-input custom-btn-success"
                                       title="Continue"
                                       type="submit" value="Continue">
                            </div>
                            <div class="form-row col-md-12 pb-3">
                                <a href="{{ path('app_login') }}"
                                   class="form-control btn btn-outline-success custom-button custom-btn-success"
                                   title="Back to Login">Back to Login
                                </a>
                            </div>
                            {{ form_errors(form) }}
                            {{ form_end(form) }}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
