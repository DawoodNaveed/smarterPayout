{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row login">
            <div class="col d-flex align-items-center justify-content-center p-0">
                <div class="col-lg-8 d-none d-lg-block p-0">
                    <img class="img-fluid rounded" alt="Image" src="{{ asset ('resources/images/bg-login.jpg') }}">
                </div>
            </div>
            <div class="col-lg-6">
                <form method="post">
                    <div class="d-flex align-items-center flex-column col-md-8 login-form">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.username }}, <a
                                        href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <img class="img rounded-circle" height="150px" width="150px"
                            alt="Avatar" src="{{ asset ('resources/images/user.png') }}">

                        <div class="form-row col-md-12 pb-3">
                            <label for="inputEmail">Email:</label>
                            <input placeholder="Enter your email here..." type="email" value="{{ last_username }}"
                                   name="email" id="inputEmail"
                                   class="form-control"
                                   autocomplete="email" required autofocus>
                        </div>

                        <div class="form-row col-md-12 pb-3">
                            <label for="inputPassword">Password:</label>
                            <input placeholder="Enter your password here..." type="password" name="password"
                                   id="inputPassword" class="form-control"
                                   autocomplete="current-password" required>
                        </div>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}">

                        {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                        #}

                        <button class="btn btn-lg btn-outline-light mt-3" title="Sign In" type="submit">
                            Sign in
                        </button>
                        <a href="{{ path('forgot_password') }}">Reset Password</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
{% endblock %}
