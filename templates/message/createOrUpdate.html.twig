{% extends 'dashboardMenu.html.twig' %}

{% block title %} Messages Management | Add New{% endblock %}
{% block content %}
    <div class="card">
        <div class="card-header">
            <a class="btn btn-sm btn-primary float-right" href="{{ path('message_list') }}" title="Back to grid"> <i
                        class="fas fa-arrow-left"></i></a>
            <h3 class="text-center">Create New Message</h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row col-md-12 p-0">
                <div class="form-row col-md-6 mb-3">
                    <label for="messageDay">Message Day:</label>
                    {{ form_widget(form.messageDay) }}{{ form_errors(form.messageDay) }}
                </div>

                <div class="form-row col-md-12 mb-3">
                    <label for="message">Message:</label>
                    {{ form_widget(form.message) }}{{ form_errors(form.message) }}
                </div>
            </div>

            <button class="btn btn-sm btn-primary float-right" type="submit" title="Create Message">Save</button>

            {{ form_errors(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock content %}

