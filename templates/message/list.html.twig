{% extends 'dashboardMenu.html.twig' %}

{% block title %}Messages Management!{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            <a class="btn btn-sm btn-primary float-right" href="{{ path('add_message') }}"> Create New <span
                        class="fa fa-plus"></span></a>
            <h3 class="text-center">Message Management</h3>
        </div>

        <div class="card-body">
            <table id="data_table" class="display table-hover table-striped table-bordered">
                <thead>
                <tr>
                    <th>Message Day</th>
                    <th>Message</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>

                {% for message in messages %}
                    <tr>
                        <td>{{ message.messageDay }}</td>
                        <td>{{ message.message|raw}}</td>
                        <td>
                            <a class="fas fa-edit text-primary p-1 ml-4" title="Edit User"
                               href="{{ path('edit_message', {'messageId' : message.id}) }}"></a>
                            <a class="fas fa-trash text-danger p-1 ml-4 deleteRecord" data-toggle="modal" data-target="#deleteModel"
                               title="Delete User" data-url="{{ path('delete_message', {'messageId' : message.id})}}"></a>
{#                            <a class="fas fa-info text-info p-1 ml-4" title="View Details"#}
{#                               href="{{ path('delete_message', {'userId' : user.id}) }}"></a>#}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}